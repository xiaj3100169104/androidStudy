<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider_gray_horizontal"
        android:dividerPadding="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/view_qr_code"
            style="@style/View.normal_item_horizontal"
            android:text="zxing扫描，生成二维码" />

        <TextView
            android:id="@+id/view_glide_deal"
            style="@style/View.normal_item_horizontal"
            android:text="Glide特殊处理" />

        <TextView
            android:id="@+id/view_app_crash"
            style="@style/View.normal_item_horizontal"
            android:text="模拟app崩溃" />

        <TextView
            android:id="@+id/view_camera2"
            style="@style/View.normal_item_horizontal"
            android:text="camera2" />

        <TextView
            android:id="@+id/view_video_record"
            style="@style/View.normal_item_horizontal"
            android:text="VideoRecord" />

        <TextView
            android:id="@+id/view_voice_record"
            style="@style/View.normal_item_horizontal"
            android:text="VoiceRecord" />

        <TextView
            android:id="@+id/view_socket"
            style="@style/View.normal_item_horizontal"
            android:text="SocketTest" />

        <TextView
            android:id="@+id/view_event_manager"
            style="@style/View.normal_item_horizontal"
            android:text="事件管理" />

        <TextView
            android:id="@+id/view_wifi"
            style="@style/View.normal_item_horizontal"
            android:text="wifi扫描" />

        <TextView
            android:id="@+id/view_webservice"
            style="@style/View.normal_item_horizontal"
            android:text="http请求webservice" />

        <TextView
            android:id="@+id/view_coroutine"
            style="@style/View.normal_item_horizontal"
            android:text="Coroutine" />

    </LinearLayout>
</ScrollView>
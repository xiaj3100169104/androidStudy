<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/title_bar_default" />

        <com.style.view.other.CustomTagsLayout
            android:id="@+id/tags_container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            app:tag_margin_horizontal="5dp"
            app:tag_margin_vertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_custom_tag"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="111111" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_custom_tag"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="22222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_custom_tag"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_custom_tag"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="4444444" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_custom_tag"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="55555555555" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_custom_tag"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="6666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_custom_tag"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="777" />
        </com.style.view.other.CustomTagsLayout>

        <Button
            android:id="@+id/btn_update_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="更新标签" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.style.view.other.RecordAudioView
            android:id="@+id/record_audio_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_start_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="开始录音" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_red" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/view_system_prompt_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="系统自带提示对话框" />

            <Button
                android:id="@+id/view_custom_loading_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义加载对话框" />

            <Button
                android:id="@+id/view_select_avatar_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="底部弹出对话框" />

            <Button
                android:id="@+id/view_popup_menu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="popupMenu" />

            <Button
                android:id="@+id/view_list_popup_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="ListPopupWindow" />

            <Button
                android:id="@+id/view_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Spinner" />

            <Button
                android:id="@+id/view_BottomSheetDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BottomSheetDialog" />

            <Button
                android:id="@+id/view_number_safe_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数字安全键盘" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="#000"
                android:src="@drawable/ic_launcher" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
